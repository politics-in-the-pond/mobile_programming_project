<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mpteam">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/app_forest_symbol"
        android:supportsRtl="true"
        android:roundIcon="@drawable/app_forest_symbol"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.mpteam.LoginActivity"/>
        <activity android:name="com.example.mpteam.SignupActivity"/>
        <activity android:name="com.example.mpteam.FindActivity" />
        <activity android:name="com.example.mpteam.MainActivity" />
        <activity
            android:name="com.example.mpteam.SplashActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>