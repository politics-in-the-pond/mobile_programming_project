<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#002060"
    android:layout_height="match_parent">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="10dp">

           <ImageView
               android:layout_marginLeft="25dp"
               android:layout_centerVertical="true"
               android:layout_alignParentLeft="true"
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:src="@drawable/gauge"/>

           <ProgressBar
               android:layout_centerHorizontal="true"
               android:id="@+id/progress"
               android:progress="40"
               style="@android:style/Widget.ProgressBar.Horizontal"
               android:layout_centerVertical="true"
               android:layout_width="200dp"
               android:max="100"
               android:layout_height="wrap_content"/>

           <Button
               android:background="@drawable/custom_btn"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="사용"/>
       </RelativeLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="20dp"
           android:orientation="horizontal">


           <ImageView
               android:layout_width="130dp"
               android:layout_height="130dp"
               android:src="@drawable/ic_outline_account_circle_24"></ImageView>

           <LinearLayout
               android:layout_marginLeft="15dp"
               android:layout_marginTop="25dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_weight="3">

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:layout_weight="1">

                   <TextView
                       android:id="@+id/Mypage_nickname"
                       android:layout_centerVertical="true"
                       android:layout_alignParentLeft="true"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="닉네임"
                       android:textSize="20dp"
                       android:textColor="#ffffff"/>

               </RelativeLayout>

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:layout_weight="1">
                   <TextView
                       android:id="@+id/Mypage_email"
                       android:layout_centerVertical="true"
                       android:layout_alignParentLeft="true"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Email"
                       android:textSize="20dp"
                       android:textColor="#ffffff"/>

               </RelativeLayout>
           </LinearLayout>

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">



           <TextView
               android:text="계정"
               android:textStyle="bold"
               android:textSize="25dp"
               android:layout_marginTop="20dp"
               android:layout_marginLeft="20dp"
               android:textColor="@color/white"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               />
           <Button
               style="@style/Widget.AppCompat.Button.Borderless"
               android:id="@+id/change_nickname"
               android:text="닉네임 변경"
               android:gravity="left"
               android:layout_marginTop="20dp"
               android:paddingLeft="20dp"
               android:textSize="20dp"
               android:textColor="@color/white"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               />
           <Button
               style="@style/Widget.AppCompat.Button.Borderless"
               android:text="이메일 변경"
               android:id="@+id/change_email"
               android:gravity="left"
               android:paddingLeft="20dp"
               android:textSize="20dp"
               android:textColor="@color/white"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               />
           <Button
               style="@style/Widget.AppCompat.Button.Borderless"
               android:text="비밀번호 변경"
               android:id="@+id/change_pw"
               android:gravity="left"
               android:paddingLeft="20dp"
               android:textSize="20dp"
               android:textColor="@color/white"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               />
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <TextView
               android:text="일기"
               android:textStyle="bold"
               android:textSize="25dp"
               android:layout_marginTop="20dp"
               android:layout_marginLeft="20dp"
               android:textColor="@color/white"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               />
           <Button
               style="@style/Widget.AppCompat.Button.Borderless"
               android:text="감정 통계"
               android:gravity="left"
               android:layout_marginTop="20dp"
               android:paddingLeft="20dp"
               android:textSize="20dp"
               android:textColor="@color/white"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               />

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <TextView
               android:text="기타"
               android:textStyle="bold"
               android:textSize="25dp"
               android:layout_marginTop="20dp"
               android:layout_marginLeft="20dp"
               android:textColor="@color/white"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               />
           <Button
               style="@style/Widget.AppCompat.Button.Borderless"
               android:id="@+id/logout_btn"
               android:text="로그아웃"
               android:gravity="left"
               android:layout_marginTop="20dp"
               android:paddingLeft="20dp"
               android:textSize="20dp"
               android:textColor="@color/white"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               />
       </LinearLayout>
   </LinearLayout>

</ScrollView>
